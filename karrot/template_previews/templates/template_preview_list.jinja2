<!doctype html>
<html>
<head>
    <style type="text/css">

        @import url('https://fonts.googleapis.com/css?family=Lato');

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
        }

        #wrapper {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
        }

        #menu {
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 320px;
            overflow-x: hidden;
            overflow-y: auto;
            font-family: 'Lato', sans-serif;
        }

        #show {
            position: absolute;
            right: 0;
            top: 0;
            bottom: 0;
            left: 320px;
            box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
        }

        #show iframe {
            position: relative;
            width: 100%;
            height: 100%;
            border: none;
        }

        ul.templates {
            padding: 0;
        }

        ul.templates > li {
            padding: 5px 20px;
        }

        .template.unhandled {
            opacity: 0.4;
        }

        ul.formats {
            padding: 0;
        }

        ul.formats > li {
            display: inline;
        }

        ul.formats > li:after {
            content: ' | ';
            color: #aaa;
        }

        ul.formats > li:last-child:after {
            content: '';
        }

        a {
            text-decoration: none;
        }

        .template-name {
            font-size: 18px;
        }


    </style>

    <script type="text/javascript">
        function init() {
            const iframe = document.getElementById('preview');
            const ws = new WebSocket('ws://localhost:8001');

            ws.onmessage = function (event) {
                console.log('reloading');
                iframe.contentWindow.location.reload();
            }
        }

        document.addEventListener('DOMContentLoaded', init);
    </script>

</head>
<body>

<div id="wrapper">
    <div id="menu">
        <ul class="templates">
            {% for template in templates %}
                <li class="template {{ 'handled' if template.has_handler else 'unhandled' }}">
                    <span class="template-name">{{ template.name }}</span>
                    <ul class="formats">
                        {% for format in template.formats %}
                            <li><a href="/_templates/show?name={{ template.name }}&format={{ format }}"
                                   target="preview">{{ format }}</a>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div id="show">
        <iframe id="preview" name="preview"></iframe>
    </div>
</div>

</body>
</html>
